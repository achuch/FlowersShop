@model FlowersShop.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ApplicationUserId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ApplicationUserId" class ="form-control" asp-items="ViewBag.ApplicationUserId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateOfRealize" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateOfRealize" class="form-control" />
                <span asp-validation-for="DateOfRealize" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsFinished" />
                    <label asp-for="IsFinished"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsRealized" />
                    <label asp-for="IsRealized"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TotalPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
