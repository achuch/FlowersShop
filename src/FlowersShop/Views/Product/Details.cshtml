    ViewBag.Id = Model.ProductViewModel.Id;
}

<h2>Produkt : </h2>

<div class="col-lg-6">
    <h4>@Html.DisplayFor(model => model.ProductViewModel.Name)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductViewModel.Description)
        </dt>
        <dd>
