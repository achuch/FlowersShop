<div class="col-lg-6">
    @if (Model.Message != null)
    {
        <label style="color: red">@Model.Message</label>
    }
    <form asp-controller="ProductToOrders" asp-action="Create">
        <div class="form-horizontal">
            <h4>Dodaj do zamowienia</h4>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductToOrder.AmountOfProduct" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ProductToOrder.AmountOfProduct" class="form-control"/>
                    <span asp-validation-for="ProductToOrder.AmountOfProduct" class="text-danger"/>
                    <input type="hidden" asp-for="ProductToOrder.ProductId" Value="@Model.ProductViewModel.Id"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default"/>
            </div>
        </div>

    </form>
</div>
